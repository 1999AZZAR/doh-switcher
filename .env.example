# Environment variables for DoH Switcher
# Copy to .env and adjust as needed.

# Flask secret key
SECRET_KEY=-doh_switcher_secret_key
# Log file path
e.g. /var/log/doh-switcher.log
LOG_FILE=doh-switcher.log
# SQLite database path
DB_PATH=doh_history.db
# Path to cloudflared service file
SERVICE_FILE=/etc/systemd/system/cloudflared.service
# Retention window in hours for history records
RETENTION_HOURS=6
# Interval in seconds between automatic tests
TEST_INTERVAL=5
